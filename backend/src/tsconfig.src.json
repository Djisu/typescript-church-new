// tsconfig.src.json
{
    // Inherit the reused options.
    "extends": "./tsconfig.json",
    // Apply this configuration only to the files
    // under the "./src" directory.
    "include": ["./src"],
    "compilerOptions": {
      "composite": true,
      "target": "es2015",
      "module": "esnext",
      // Support JSX for React applications.
      "jsx": "react"
    }
  }