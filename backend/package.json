{
    "name": "church-management-system",
    "version": "1.0.0",
    "type": "module",
    "description": "A church management system built with Node.js and MongoDB",
    "main": "dist/server.js",
    "scripts": {
        "build": "tsc",
        "start": "node dist/src/server.js",
        "dev": "concurrently --kill-others-on-fail \"node -r dotenv/config dist/src/server.js\" \"wait-on http://localhost:3000 && npm run frontend && open http://localhost:5173\"",
        "test": "npx vitest run --watch",
        "frontend": "cd ../frontend && npm run dev -- --debug",
        "test-concurrently": "concurrently \"echo Backend running\" \"echo Frontend running\"",
        "docs": "typedoc"
    },
    "workspaces": [
        "backend",
        "frontend"
    ],
    "dependencies": {
        "@types/morgan": "^1.9.9",
        "@types/multer": "^1.4.12",
        "axios": "^1.7.2",
        "bcrypt": "^5.1.1",
        "chalk": "^5.3.0",
        "colors": "^1.4.0",
        "concurrently": "^8.2.2",
        "config": "^3.3.12",
        "cors": "^2.8.5",
        "dotenv": "^16.0.3",
        "express": "^4.21.1",
        "express-validator": "^7.2.0",
        "fs": "^0.0.1-security",
        "jsonwebtoken": "^9.0.0",
        "md5": "^2.3.0",
        "mongodb": "^6.8.0",
        "mongoose": "^6.5.2",
        "morgan": "^1.10.0",
        "multer": "^1.4.5-lts.1",
        "node-fetch": "^3.3.2",
        "nodemailer": "^6.9.15",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.1"
    },
    "devDependencies": {
        "@edge-runtime/vm": "^4.0.4",
        "@types/bcrypt": "^5.0.2",
        "@types/config": "^3.3.4",
        "@types/cors": "^2.8.17",
        "@types/express": "^5.0.0",
        "@types/express-validator": "^2.20.33",
        "@types/jsonwebtoken": "^9.0.7",
        "@types/md5": "^2.3.5",
        "@types/mongodb": "^4.0.6",
        "@types/mongoose": "^5.11.96",
        "@types/node": "^18.11.18",
        "@types/nodemailer": "^6.4.16",
        "@types/supertest": "^6.0.2",
        "@types/swagger-jsdoc": "^6.0.4",
        "@types/swagger-ui-express": "^4.1.7",
        "@vitest/browser": "^2.1.6",
        "@vitest/expect": "^2.1.6",
        "@vitest/spy": "^2.1.6",
        "@vitest/ui": "^2.1.6",
        "happy-dom": "^15.11.6",
        "jsdom": "^25.0.1",
        "mongodb-memory-server": "^10.1.2",
        "nodemon": "^3.1.4",
        "supertest": "^6.3.4",
        "ts-jest": "^29.2.5",
        "ts-node": "^10.9.2",
        "typedoc": "^0.26.11",
        "typescript": "^5.7.2",
        "vite": "^6.0.1",
        "vite-plugin-node": "^4.0.0",
        "vitest": "^2.1.6",
        "wait-on": "^8.0.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Djisu/typescript-church.git"
    },
    "keywords": [
        "church",
        "management",
        "system",
        "mongodb",
        "typescript"
    ],
    "author": "Paul Jesu Fleischer",
    "license": "MIT"
}
